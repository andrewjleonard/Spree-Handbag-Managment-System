<% content_for :page_title do %>
  <%= Spree.t(:new_handbag) %>
<% end %>

<div data-hook="admin_handbag_new_form_header">
  <%= render 'spree/shared/error_messages', target: @handbag %>
</div>

<div data-hook="admin_handbag_new_form">
  <%= form_for [:admin, @handbag] do |f| %>
    <div class="row">
      <div class="col-md-12">
        <%= render 'form', f: f %>
        <%= f.collection_select :user_id, @users, :id, :email, :prompt=>true %>
        <%= render 'spree/admin/shared/new_resource_links' %>
      </div>
    </div>
  <% end %>
</div>
